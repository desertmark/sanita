<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <title>Sanitarios Alberdi</title>
        
        <!--<link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />-->
        <meta name="viewport" content="width=device-width" />
        
        <!--REFERENCIAS CSS y JS-->
        <link href="~/Content/animate.css" rel="stylesheet" />
        <script src="~/Scripts/jquery-1.8.2.min.js"></script>
        <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
        <script src="~/Scripts/site.js"></script>
        <!-- Latest compiled and minified CSS -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">

        <!-- Optional theme -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap-theme.min.css">

        <!-- Latest compiled and minified JavaScript -->
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")


    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">@Html.ActionLink("Sanitarios Alberdi S.H.", "Index", "Home", new {@class="animated flip" })</p>
                </div>
                <div class="float-right">
                    <section id="login">
                       @Html.Partial("_LoginPartial") 
                    </section>
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
                            <li>@Html.ActionLink("Sobre nosotros", "About", "Home")</li>
                            <li>@Html.ActionLink("Contacto", "Contact", "Home")</li>
                            <li>@Html.ActionLink("Productos","Index","Productos" )</li>
                            @if(Request.IsAuthenticated)
                            {
                                <li>@Html.ActionLink("Banner","Index","Banner")</li>
                            }
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("content", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="">
                    <p>&copy; @DateTime.Now.Year - Sanitarios Alberdi - Sociedad de hecho</p>
                </div>
                <br />
                <section>
                        <h3>Telefono</h3>
                    <p>
                        <span>Unico:</span>
                        <span>0362-4426799</span>
                    </p>
                </section>
                <section>
                        <h3>E-mail</h3>
                    <p>
                        <span>Consultas:</span>
                        <span>sanitariosalberdi14@gmail.com</span>
                    </p>
                </section>
                <section>
                        <h3>Direccion</h3>
                    <p>
                        Av. Alberdi 821 <br>
                        Resistencia, chaco.
                    </p>
                </section>
            </div>
</footer>
        <div id="fixedBottomText" itemscope itemtype="http://data-vocabulary.org/Organization"> 
                <span itemprop="name">Sanitarios Alberdi</span>
                Ubicada en 
                <span itemprop="address" itemscope 
                  itemtype="http://data-vocabulary.org/Address">
                  <span itemprop="street-address">Av. Alberdi 821</span>, 
                  <span itemprop="locality">Resistencia</span>, 
                  <span itemprop="region">Argentina</span>
                </span>
                Teléfono: <span itemprop="tel">0362-4426799</span>
                <a href="http://sanitariosalberdi.com.ar" itemprop="url">http://SanitariosAlberdi.com.ar</a>
        </div>
        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>

</html>
